{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/src/*"],
      "@shared/*": ["./shared/*"],
      "@engine/*": ["./frontend/src/engine/*"],
      "@components/*": ["./frontend/src/components/*"],
      "@rendering/*": ["./frontend/src/rendering/*"],
      "@store/*": ["./frontend/src/store/*"],
      "@hooks/*": ["./frontend/src/hooks/*"],
      "@utils/*": ["./frontend/src/utils/*"]
    }
  },
  "include": ["frontend/src", "shared"],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "frontend/src/engine/actions/ApplyForJobAction.ts",
    "frontend/src/engine/actions/EnterBuildingAction.ts",
    "frontend/src/engine/actions/ExitBuildingAction.ts",
    "frontend/src/engine/actions/MovementAction.ts",
    "frontend/src/engine/actions/PayRentAction.ts",
    "frontend/src/engine/actions/PurchaseAction.ts",
    "frontend/src/engine/actions/PurchaseClothesAction.ts",
    "frontend/src/engine/actions/RelaxAction.ts",
    "frontend/src/engine/actions/RentHouseAction.ts",
    "frontend/src/engine/actions/StudyAction.ts",
    "frontend/src/engine/actions/WorkAction.ts",
    "frontend/src/engine/GameController.ts",
    "frontend/src/input/InputHandler.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
